<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ProfileActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">
        <FrameLayout
            android:id="@+id/back_con"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="프로필"
            android:textColor="@color/colorTitleGrey"
            android:textSize="18sp" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLineGrey" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorBackGrey"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="@color/colorLineGrey" />

            <LinearLayout
                android:id="@+id/normal_con"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="닉네임"
                        android:textColor="@color/colorTitleGrey2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#848484"
                        android:textSize="15sp"
                        tools:text="abc" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="가입일자"
                        android:textColor="@color/colorTitleGrey2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/join_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#848484"
                        android:textSize="15sp"
                        tools:text="2019년07월15일" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="생년월일"
                        android:textColor="@color/colorTitleGrey2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#848484"
                        android:textSize="15sp"
                        tools:text="2019년07월15일" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="꿈"
                        android:textColor="@color/colorTitleGrey2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/dream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="9dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#848484"
                        android:textSize="15sp"
                        tools:text="abc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:background="@color/colorLineGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="12dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="간단 소개"
                        android:textColor="@color/colorTitleGrey2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/introduce_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="40dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#848484"
                        android:textSize="15sp"
                        tools:text="간단 소개란" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:background="@color/colorLineGrey" />

            </LinearLayout>

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:visibility="visible"/>


        </LinearLayout></ScrollView>


</LinearLayout>