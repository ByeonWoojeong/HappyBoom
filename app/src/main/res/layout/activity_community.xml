<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".CommunityActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <FrameLayout
            android:id="@+id/back_con"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back" />
        </FrameLayout>

        <ImageView
            android:layout_width="76dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <FrameLayout
            android:id="@+id/more_con"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical">

            <ImageView
                android:id="@+id/more"
                android:layout_width="2.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/commu_details" />
        </FrameLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLineGrey" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:background="#000">
                <WebView
                    android:id="@+id/video_view"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="330dp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLineGrey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    tools:background="@drawable/pick"/>

                <TextView
                    android:id="@+id/nickname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTitleGrey"
                    android:textSize="15sp"
                    tools:text="닉네임" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTitleGrey"
                    android:textSize="15sp"
                    tools:text="2019-07-12 12:37" />

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="95dp"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTextGrey2"
                    android:textSize="13sp"
                    tools:text="커뮤니티 내용" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorBackGrey"
                android:orientation="horizontal">

                
                <FrameLayout
                    android:id="@+id/like_con"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp">
                    <CheckBox
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/like"
                        android:focusable="false"
                        android:checked="false"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/like_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTitleGrey"
                    android:textSize="13sp"
                    tools:text="12" />

                <FrameLayout
                    android:id="@+id/share_con"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp">
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/share"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/share_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTitleGrey"
                    android:textSize="13sp"
                    tools:text="12" />

                <FrameLayout
                    android:id="@+id/comment_con"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp">
                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/comment"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/comment_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:textColor="@color/colorTitleGrey"
                    android:textSize="13sp"
                    tools:text="12" />

                <FrameLayout
                    android:id="@+id/report_con"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp">
                    <ImageView
                        android:id="@+id/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/report"/>
                </FrameLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLineGrey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#f7f8f8"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLineGrey" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/to_re_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:textColor="@color/colorTitleGrey"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="to_nick" />


        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:hint="comment"
            android:background="@null"
            android:padding="10dp"
            android:inputType="none"
            android:textColor="#000"
            android:textColorHint="@color/colorHintGrey"
            android:textSize="13sp"/>

        <FrameLayout
            android:id="@+id/ok_con"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ok"
                android:layout_toRightOf="@+id/comment2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:textColor="@color/colorMain2"
                android:textSize="16sp"
                android:text="등록" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>